<div class="blocks-container">

    <div class="left-block">

      <div class="auth-form">

          <div class="form-section">
          <h1>Log <span>In!</span></h1>
          </div>

          <form action="/auth/login" method="POST">
            <div class="form-section">
                <label for="email">Email:</label>
                <div>
                  <input class="text-input auth-input" placeholder="Introduce your email" required type="email" name="email">
                </div>
            </div>
            <div class="form-section">
                <label for="password">Password:</label>
                <div>
                    <input  class="text-input auth-input" placeholder="Password" required type="password" name="password">
                </div>
            </div>
             {{#if errorMessage}}
              <p class="error-message">{{errorMessage}}</p>
              {{/if}} 
             <div class="form-section"> 
                  <button class="big-button auth-button" type="submit">Log in</button>
             </div>
        </form>
       

      </div>
      <div class="footer-auth-form">

            <a href="/">Go back</a>
