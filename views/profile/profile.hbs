<div class="profile-img">
  <img src="{{imageProfile}}" alt="" />
</div>
<h4>{{name}} {{lastName}}</h4>
<p>@{{username}}</p>

<p>{{description}}</p>
<a href="/profile/edit">Edit</a>

<hr />

<h3>{{name}}'s favorite artists:</h3>
<div class="profile-cards">
  {{#each favoriteArtists}}
    <div class="each-artist">
      <img src="{{image}}" alt="artist image" />
      <p>{{name}}</p>
    </div>
  {{/each}}
</div>

<hr />

<h3>{{name}}'s playlists:</h3>
{{! <a href="/playlist/create" >Create playlist</a> }}
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Create playlist
</button>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">New playlist</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form action="/playlist/create" method="POST" enctype="multipart/form-data">
        <div class="modal-body">

          <div>
            <label for="playlistImage">Playlist Image</label>
            <input type="file" id="playlistImage" name="playlistImage" />
          </div>
          <div>
            <label for="name">Title: </label>
            <input required id="playlist-title" type="text" name="name" />
          </div>

          <div>
            <label for="description">Description</label>
            <textarea type="description" name="description" placeholder="Add an optional description"></textarea>
          </div>

        </div>
        <div class="modal-footer">
          <button disabled type="submit" id="modal-button" class="btn btn-primary" data-bs-dismiss="modal">Create
            playlist</button>
        </div>

      </form>
    </div>
  </div>
</div>

<br />
<div class="profile-cards">
  {{#each playlists}}
    <div class="each-playlist">
      <img src="{{playlistImage}}" alt="artist image" />
      <p>{{name}}</p>
      <a href="/playlist/{{_id}}">Listen</a>
    </div>

  {{/each}}
</div>

<hr />

